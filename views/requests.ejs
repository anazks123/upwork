<section>
    <!--for demo wrap-->
    <h1>View Request</h1>
    <div class="tbl-header">
      <table cellpadding="0" cellspacing="0" border="0">
        <thead>
          <tr>
            <th>name</th>
            <th>Email</th>
            <th>view</th>
            <th>approve</th>
            
          </tr>
        </thead>
      </table>
    </div>
    <div class="tbl-content">
      <table cellpadding="0" cellspacing="0" border="0">
        <tbody>
            <% user.forEach(function(user) { %>
          <tr>
            <td><%=user.name%></td>
            <td><%=user.email%> </td>
            <td><a href="viewprofile/<%=user.email%>" class="btn btn-primary">profile</a></td>
            <form action="/aprove" method="POST">
                <input type="hidden" name="mail" value="<%=user.email%>"> 
                <input type="hidden" name="cmail" value="<%=user.cemail%>">
            <td><button class="button button3">Approve</button> </td>
        </form>
          </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
  </section>
  
